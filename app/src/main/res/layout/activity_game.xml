<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/past_digits_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="none"
        android:gravity="end|center_vertical"
        android:textSize="80sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/digits_et"
        app:layout_constraintBaseline_toBaselineOf="@id/digits_et" />


    <EditText
        android:id="@+id/digits_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="  "
        android:inputType="number"
        android:maxLength="1"
        android:paddingTop="0dp"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/past_digits_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
